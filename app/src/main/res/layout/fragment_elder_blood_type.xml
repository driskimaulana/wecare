    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewInputElderBloodType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/golonganDarah"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/bloodTypeRhSystemRadioGroup"
            app:layout_constraintStart_toStartOf="parent" />

        <RadioGroup
            android:id="@+id/bloodTypeRhSystemRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/textViewInputElderBloodType">

            <RadioButton
                android:id="@+id/radioBloodTypeAPos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A RhD Positif (A+)" />

            <RadioButton
                android:id="@+id/radioBloodTypeANeg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A RhD Negatif (A-)" />

            <RadioButton
                android:id="@+id/radioBloodTypeBPos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B RhD Positif (B+)" />

            <RadioButton
                android:id="@+id/radioBloodTypeBNeg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B RhD Negatif (B-)" />

            <RadioButton
                android:id="@+id/radioBloodTypeOPos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O RhD Positif (O+)" />

            <RadioButton
                android:id="@+id/radioBloodTypeONeg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O RhD Negatif (O-)" />

            <RadioButton
                android:id="@+id/radioBloodTypeABPos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AB RhD Positif (AB+)" />

            <RadioButton
                android:id="@+id/radioBloodTypeABNeg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AB RhD Negatif (AB-)" />
        </RadioGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/yale_blue"
        android:paddingHorizontal="40dp"
        android:text="@string/update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

