<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="344dp"
    android:layout_height="361dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_bg_fall_detected">

    <TextView
        android:id="@+id/tv_fall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Anda Terjatuh"
        android:textColor="@color/white"
        android:textSize="14.4pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="62dp"
        android:layout_height="62dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_fall"
        android:src="@drawable/ic_warning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:id="@+id/img_warning"/>

    <Button
        android:layout_width="205dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@+id/img_warning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Batalkan Pesan"
        android:textColor="@color/blue"
        android:layout_marginTop="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>